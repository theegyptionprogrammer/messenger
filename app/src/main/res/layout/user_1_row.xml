<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/firstMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/firstIamge"
        android:layout_toRightOf="@id/firstIamge"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/firstIamge"
        app:layout_constraintTop_toTopOf="@+id/firstIamge" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firstIamge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_color="@color/colorBlack"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>